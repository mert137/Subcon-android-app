<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundkesfet">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/image_kesfet"
        android:text=""
        android:background="@drawable/metro"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

<GridView
    android:id="@+id/simpleGridViewKesfet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:columnWidth="100dp"
    android:numColumns="2"
    android:verticalSpacing="24dp"
    android:horizontalSpacing="20dp"
    android:stretchMode="columnWidth"
    android:layout_below="@+id/image_kesfet"
    android:layout_margin="5dp"
    android:layout_alignRight="@+id/image_kesfet"
    android:layout_alignLeft="@+id/image_kesfet"/>

</RelativeLayout>


    <!--horizontal spacing ile thumbnailler arası boşluk belirlenir-->
